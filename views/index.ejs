<html>

<head>
    <%- include('partials/head') %>
</head>

<body>
    <div class="container-fluid">
        <%- include('partials/header') %>
        <% var card = ['primary text-white','success text-white','danger text-white','info','light','dark text-white','warning'] %> 
        <br><br>
        <div class="row">
            <% for (var i =0; i <data.length;  i++ ) { %>
            <div class="col-md-4" >
                <div class="card bg-<%=card[i%7]%> mb-4 " style="padding: 4% 2% 4% 2%;">
                    <img id="image" src=/images/uploads/<%= data[i]['image'] %> class="card-img-top img-responsive img-thumbnail" ><br>
                    <h3 class="card-title"><%= data[i]['name'] %></h3>
                    <h5 class="text-right"><%= data[i]['date'] %></h5>
                </div>
                
            </div>
    
    
            <% } %>
    
        </div>
        
        <%- include('partials/footer') %>
    </div>
</body>

</html>